# Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application
VITE_APP_NAME="Camelback Medical Centers - Naperville"
VITE_APP_URL=https://camelbackmedical.com
VITE_NODE_ENV=production

# Business Information
VITE_BUSINESS_PHONE=(630) 416-1151
VITE_BUSINESS_EMAIL=info@camelbackmedical.com
VITE_BUSINESS_ADDRESS=123 Main Street, Naperville, IL 60540

# GoHighLevel Integration
# Get these from your GHL account settings
VITE_GHL_LOCATION_ID=your_location_id_here
VITE_GHL_API_KEY=your_api_key_here
VITE_GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/your_webhook_id
VITE_GHL_CALENDAR_ID=your_calendar_id_here
VITE_GHL_FORM_ID=your_form_id_here

# Analytics & Tracking (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX
VITE_FACEBOOK_PIXEL_ID=your_pixel_id_here

# Google Maps API (for location features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Business Profile
VITE_GOOGLE_PLACE_ID=your_place_id_here

# Social Media URLs
VITE_FACEBOOK_URL=https://www.facebook.com/camelbackmedical
VITE_INSTAGRAM_URL=https://www.instagram.com/camelbackmedical
VITE_LINKEDIN_URL=https://www.linkedin.com/company/camelbackmedical
VITE_YOUTUBE_URL=https://www.youtube.com/@camelbackmedical

# Reviews & Reputation
VITE_GOOGLE_REVIEWS_PLACE_ID=your_place_id_here
VITE_GOOGLE_REVIEWS_API_KEY=your_api_key_here
# Example: https://share.google/SfA3o8kkHjJZxGWuW
VITE_GOOGLE_REVIEW_LINK=https://share.google/YOUR_REVIEW_LINK

# Feature Flags
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_CHAT_WIDGET=false
VITE_ENABLE_BOOKING_WIDGET=true

# Third-Party Services
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
VITE_MAILCHIMP_API_KEY=your_mailchimp_api_key
VITE_MAILCHIMP_LIST_ID=your_list_id

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
